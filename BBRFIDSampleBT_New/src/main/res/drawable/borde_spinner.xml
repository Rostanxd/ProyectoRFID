<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/gColorBlanco">
                </solid>

                <corners android:radius="3dp" />

                <padding
                    android:bottom="2dp"
                    android:left="5dp"
                    android:right="5dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/gColorGris_n800"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="bottom|right"
                android:src="@drawable/material_arrow" />
        </item>
    </layer-list></item>
</selector>