<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/procesar_imgbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gColorAzulClaro"
            android:text="@string/BTN_procesar"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_marginTop="5dip"
        android:background="@color/gColorCyan_n700"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:text="@string/GECodItems"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:id="@+id/tvHCol1"/>

        <TextView
            android:id="@+id/tvHCol2"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/GECantidad"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_detailSW"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" >

    </ListView>

</LinearLayout>



</LinearLayout>