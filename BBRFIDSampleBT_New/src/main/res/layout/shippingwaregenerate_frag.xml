android:orientation="vertical"
tools:context=".fragmentvct.DespatchGuideGenerateFragment">

    <LinearLayout
        android:id="@+id/LayoutBodAlmacenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SWBodAlmacenamiento"
            android:textStyle="bold"
            android:textColor="@color/gColorGris_n800" />

        <Spinner
            android:id="@+id/spinnerBodAlmacenamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="5dip"
            android:background="@drawable/borde_spinner"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SWMotivo"
            android:textStyle="bold"
            android:textColor="@color/gColorGris_n800" />

        <Spinner
            android:id="@+id/spinnerMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="0dp"
            android:background="@drawable/borde_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </LinearLayout>

