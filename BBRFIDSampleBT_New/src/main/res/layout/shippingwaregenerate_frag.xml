    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5sp"
        android:gravity="right"
        android:orientation="vertical">
        <!-- <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#F5870A"
             android:text="Nota" />-->

        <Button
            android:id="@+id/btnAddNota"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="@color/gColorCyan_n700"
            android:text="Agregar Nota"
            android:visibility="gone"
            android:textColor="@color/gColorBlanco"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/borde"
        android:backgroundTint="@color/gColorGris_n100"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="12dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_cuaderno" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Nota" />
        </LinearLayout>


        <EditText
            android:id="@+id/etNota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:textSize="12dp" />
    </LinearLayout>



