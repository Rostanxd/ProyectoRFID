<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="prueba"
            android:textColor="@color/gColorNegro"
            android:layout_weight="1" />



        <TextView
            android:id="@+id/tvCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCol1"
            android:text="prueba"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/gColorNaranja_n800"
            android:layout_weight="1"
            />


        <!-- Rightend Arrow -->
        <ImageView android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_activo"
            android:backgroundTint="@color/gColorVerdeDark"
            android:id="@+id/imgListView"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>



</RelativeLayout>