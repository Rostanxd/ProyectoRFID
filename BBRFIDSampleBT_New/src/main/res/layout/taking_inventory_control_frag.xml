<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentvct.TakingInventoryControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/TIconteo" />

        <Spinner
            android:id="@+id/spinnerConteo"
            android:layout_width="match_parent"
            android:background="@drawable/borde_spinner"
            android:layout_height="wrap_content"
             />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10dip"
        android:layout_marginRight="5sp"
        android:orientation="horizontal">

        <!--<ProgressBar
            android:id="@+id/pbLeidos"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />-->

        <ProgressBar
            android:id="@+id/pbLeidos"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:progressDrawable="@drawable/horizontal_progress" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:text="Leidos/Stock" />

        <TextView
            android:id="@+id/tvContado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0/0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LayoutInvC"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:background="@color/gColorAzulClaro"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:text="@string/TIseccion"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:text="@string/TIleidos"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="right"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:text="   Stock"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="right"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/TIPercent"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_Replenishment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp" >

        </ListView>
    </LinearLayout>



</LinearLayout>