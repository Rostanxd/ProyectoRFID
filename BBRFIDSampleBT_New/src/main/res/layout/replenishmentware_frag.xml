<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.kr.bluebird.newrfid.app.bbrfidbtdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/RSeccion" />

        <!--<ImageButton
            android:id="@+id/ibtnPotencia"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/radio" />-->

        <Spinner
            android:id="@+id/spinnerSeccionRW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_spinner" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inven_imgbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#1F9375"
            android:text="iniciar"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/stop_inven_imgbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#EF3C10"
            android:text="detener"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/clean_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F38428"
            android:text="limpiar"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#607d8b"
            android:text="@string/clear_str"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/result_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/gColorAzulClaro"
            android:text="Resultado"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/snapShot_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/end_b"
            android:text="Snapshot"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tag_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/timer_des_str"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/timer_str"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/speed_str"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/speed_count_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/empty_str"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/timer_progress"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dip"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <Switch
                    android:id="@+id/turbo_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/turbo_str"
                    android:textSize="4sp" />

                <Switch
                    android:id="@+id/rssi_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/rssi_str2"
                    android:textSize="4sp" />

                <Switch
                    android:id="@+id/sound_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sound_str"
                    android:textSize="4sp" />

                <!--<Switch
                    android:id="@+id/pc_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/remove_pc_str"
                    android:textSize="4sp" />-->

                <Switch
                    android:id="@+id/toggle_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/toggle_str"
                    android:textSize="4sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                tools:visibility="invisible">

                <!--<Switch
                    android:id="@+id/turbo_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/turbo_str"
                    android:textSize="8sp" />

                <Switch
                    android:id="@+id/rssi_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/rssi_str2"
                    android:textSize="8sp" />

                <Switch
                    android:id="@+id/sound_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sound_str"
                    android:textSize="8sp" />-->

                <Switch
                    android:id="@+id/filter_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/filter_str"
                    android:textSize="8sp"
                    tools:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                tools:visibility="invisible">

                <Switch
                    android:id="@+id/file_switch"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/file_str"
                    android:textSize="8sp" />

                <Switch
                    android:id="@+id/mask_switch"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="@string/selection_str"
                    android:textSize="8sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/session_str"
                    android:textSize="11sp" />

                <Spinner
                    android:id="@+id/session_spin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="@string/sel_flag_str"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/sel_flag_spin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/battery_state_str"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/battery_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_marginTop="0dip"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/count_des_str"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/avr_speed_str"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/speed_avr_count_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/empty_str"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gColorCyan_n700">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_marginTop="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_etiqueta"
                            android:backgroundTint="@color/gColorBlanco" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_icon"
                            android:layout_marginTop="12dp"
                            android:text=" Etiquetas Encontradas"
                            android:textColor="@color/gColorBlanco" />

                    </LinearLayout>



                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="330dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_circulo"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:gravity="center"
                            android:text="@string/count_str"
                            android:textAlignment="center"
                            android:textColor="@color/end_b"
                            android:textSize="130sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/tag_locate_container"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_locate_text"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=""/>

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_back"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#c0c0c0"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/tag_locate_progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:progressDrawable="@drawable/vertical_progress"
                    android:layout_gravity="center"
                    android:max="100" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






