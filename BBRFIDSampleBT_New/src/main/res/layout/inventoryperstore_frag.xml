<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentvct.InventoryPerStoreFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="@string/ISStyle" />

            <EditText
                android:id="@+id/etEstiloItemIPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/gColorGris_n800"
                android:background="@drawable/borde_edittext"
                android:inputType="textPersonName" />

            <!--<Button
                android:id="@+id/btnscanQR"
                android:layout_width="50sp"
                android:layout_height="30dip"
                android:background="@drawable/borderedondo"
                android:backgroundTint="#00897B"
                android:text="Leer QR"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnCargarIPS"
                android:layout_width="50sp"
                android:layout_marginLeft="2sp"
                android:layout_height="30dip"
                android:background="@drawable/borderedondo"
                android:backgroundTint="#00897B"
                android:text="@string/GEbtnCargar"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>-->

            <!--<Button
                android:id="@+id/btnClear"
                android:layout_width="50sp"
                android:layout_marginLeft="2sp"
                android:layout_height="30dip"
                android:background="@drawable/borderedondo"
                android:backgroundTint="#F38428"
                android:text="@string/GElimpiar"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1F9375"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F38428"
                android:text="limpiar"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                />

            <Button
                android:id="@+id/btn_infoIPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gColorAzulClaro"
                android:text="Informacion"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                />

            <Button
                android:id="@+id/btn_saldosIPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/end_b"
                android:text="@string/BTN_Saldos"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LayoutInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/vPagerGarment"/>

                <!--<ImageView
                    android:id="@+id/ivGarment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="#00AA66CC" />-->


                <TextView
                    android:id="@+id/tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tvanio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutSaldos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layoutHeaderSale"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="Talla"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:text="Local"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:text="Otros"
                        android:textStyle="bold" />

                </LinearLayout>

                <ExpandableListView
                    android:id="@+id/expLV_Saldos"
                    android:layout_width="match_parent"
                    android:layout_height="300dip"
                    android:divider="#F0F0F0"
                    android:layout_marginTop="1dp"
                    android:dividerHeight="1dp"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />


                <LinearLayout
                    android:id="@+id/layoutFooterSale"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="Total"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:id="@+id/tvTotalGLocal"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="150dip"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@color/end_b"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:id="@+id/tvTotalGOtros"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


