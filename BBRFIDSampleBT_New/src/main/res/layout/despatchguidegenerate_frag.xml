<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentvct.DespatchGuideGenerateFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GENoGuiaEntrada"
                    android:textColor="@color/gColorGris_n800"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_nGuiaEntrada"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/borde_edittext"
                    android:inputType="text" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GDDestino"
                    android:textColor="@color/gColorGris_n800"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDestino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/borde_edittext"
                    app:layout_constraintStart_toStartOf="parent"
                    android:spinnerMode="dropdown"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

            </TableRow>

        </TableLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/procesar_imgbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gColorAzulClaro"
                android:text="@string/BTN_procesar"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:background="@color/gColorCyan_n700"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dip"
                    android:layout_height="45dip"
                    android:text="@string/GECodItems"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/tvHCol1"/>

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="45dip"
                    android:text="@string/GECantidad"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:id="@+id/tvHCol2"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lv_detailGD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.5dp">

            </ListView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>